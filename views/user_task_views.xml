<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View user.task View Tree -->
    <record id="view_user_task_tree" model="ir.ui.view">
        <field name="name">view.user.task.tree</field>
        <field name="model">user.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View user.task form -->
    <record id="view_user_task_form" model="ir.ui.view">
        <field name="name">view.user.task.form</field>
        <field name="model">user.task</field>
        <field name="arch" type="xml">
            <form string="User Task">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View user.task search -->
    <record id="view_user_task_search" model="ir.ui.view">
        <field name="name">view.user.task.search</field>
        <field name="model">user.task</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action user.task -->
    <record id="action_user_task" model="ir.actions.act_window">
        <field name="name">User Task</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">user.task</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new User Task.
            </p>
        </field>
    </record>
    
    <menuitem id="menu_user_task" name="Task" parent="menu_task_management_configuration" action="action_user_task"/>

</odoo>
